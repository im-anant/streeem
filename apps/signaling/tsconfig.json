{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "disableSourceOfProjectReferenceRedirect": true
  },
  "include": ["src/**/*"],
  "references": [{ "path": "../../packages/shared" }]
}


