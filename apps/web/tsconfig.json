{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "noEmit": true,
    "composite": true,
    "disableSourceOfProjectReferenceRedirect": true
  },
  "include": ["src/**/*", "vite.config.ts"],
  "references": [{ "path": "../../packages/shared" }]
}


